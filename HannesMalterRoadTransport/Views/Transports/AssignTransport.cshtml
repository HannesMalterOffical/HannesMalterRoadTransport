@model IEnumerable<HannesMalterRoadTransport.Models.Transport>

@{
    ViewData["Title"] = "AssignTransport";
}

<h1>Assign Transport Driver and Car number</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartingLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ETA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Driver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarNR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrnspReady)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartingLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ETA)
            </td>
            <td>
                    <form asp-action="EditTransporDriverNameAndCarNumber" method="post">
                        <input type="hidden" asp-for="@item.Id" value="@item.Id" />
                        <input type="hidden" asp-for="@item.Driver" value="@item.Driver" placeholder="Driver Name" />
                    </form>
            </td>
            <td>
                    <form asp-action="EditTransporDriverNameAndCarNumber" method="post">
                        <input type="hidden" asp-for="@item.Id" value="@item.Id" />
                        <input type="hidden" asp-for="@item.CarNR" value="@item.CarNR" placeholder="Car Number" />
                        <input type="submit" value="Edit" class="btn btn-primary" />
                    </form>
                    @*<a asp-action="EditTransport" asp-route-id="@item.Id">Edit</a>*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrnspReady)
            </td>
        </tr>
}
    </tbody>
</table>
